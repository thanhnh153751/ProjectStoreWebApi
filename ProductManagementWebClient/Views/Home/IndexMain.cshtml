    <script>
        // Function to add Font Awesome icons to Slick carousel buttons
        function addFontAwesomeIconsToSlickButtons() {
            const prevButton = document.querySelector('.slick-prev');
            const nextButton = document.querySelector('.slick-next');

            if (prevButton && nextButton) {
                console.log("???");
                // Add Font Awesome icons to the buttons
                prevButton.innerHTML = '<i class="fas fa-chevron-left"></i>';
                nextButton.innerHTML = '<i class="fas fa-chevron-right"></i>';
            }
        }

        // Wait for the content to load before applying the Font Awesome icons
        document.addEventListener('DOMContentLoaded', addFontAwesomeIconsToSlickButtons);
    </script>
