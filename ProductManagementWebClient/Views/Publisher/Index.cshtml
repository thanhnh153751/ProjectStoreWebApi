@model ProjectManagementAPl.ViewModels.PublisherViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Enter Publisher Information</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form class="row g-3" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="publisher_name" class="control-label"></label>
                    <input asp-for="publisher_name" class="form-control" value="@((ViewBag.publisherModel != null ? ViewBag.publisherModel.publisher_name : ""))" />
                    <span asp-validation-for="publisher_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="city" class="control-label"></label>
                    <input asp-for="city" class="form-control" value="@((ViewBag.publisherModel != null ? ViewBag.publisherModel.city : ""))" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="state" class="control-label"></label>
                    <input asp-for="state" class="form-control" value="@((ViewBag.publisherModel != null ? ViewBag.publisherModel.state : ""))" />
                    <span asp-validation-for="state" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="country" class="control-label"></label>
                    <input asp-for="country" class="form-control" value="@((ViewBag.publisherModel != null ? ViewBag.publisherModel.country : ""))" />
                    <span asp-validation-for="country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button onclick="window.location.href='/Publisher/ClearModel'" type="button" class="btn btn-primary">Clear</button>
                </div>
            </div>

        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pub_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publisher_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.publisherList)
        {
            <tr>
                <td>
                    @item.pub_id
                </td>
                <td>
                    @item.publisher_name
                </td>
                <td>
                    @item.city
                </td>
                <td>
                    @item.state
                </td>
                <td>
                    @item.country
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = @item.pub_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = @item.pub_id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
