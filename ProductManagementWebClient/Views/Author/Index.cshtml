@model ProjectManagementAPl.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Enter Author Information</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form class="row g-3" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="last_name" class="control-label"></label>
                    <input asp-for="last_name" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.last_name : ""))"/>
                    <span asp-validation-for="last_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="first_name" class="control-label"></label>
                    <input asp-for="first_name" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.first_name : ""))"/>
                    <span asp-validation-for="first_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="phone" class="control-label"></label>
                    <input asp-for="phone" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.phone : ""))"/>
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="address" class="control-label"></label>
                    <input asp-for="address" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.address : ""))"/>
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="city" class="control-label"></label>
                    <input asp-for="city" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.city : ""))"/>
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="state" class="control-label"></label>
                    <input asp-for="state" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.state : ""))"/>
                    <span asp-validation-for="state" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="zip" class="control-label"></label>
                    <input asp-for="zip" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.zip : ""))"/>
                    <span asp-validation-for="zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email_address" class="control-label"></label>
                    <input asp-for="email_address" class="form-control" value="@((ViewBag.authorModel != null ? ViewBag.authorModel.email_address : ""))"/>
                    <span asp-validation-for="email_address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button onclick="window.location.href='/Author/ClearModel'" type="button" class="btn btn-primary">Clear</button>
                </div>
            </div>
        </form>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.author_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.last_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.first_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email_address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.authorList)
        {
            <tr>
                <td>
                    @item.author_id
                </td>
                <td>
                    @item.last_name
                </td>
                <td>
                    @item.first_name
                </td>
                <td>
                    @item.phone
                </td>
                <td>
                    @item.address
                </td>
                <td>
                    @item.city
                </td>
                <td>
                    @item.state
                </td>
                <td>
                    @item.zip
                </td>
                <td>
                    @item.email_address
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = @item.author_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = @item.author_id })
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
