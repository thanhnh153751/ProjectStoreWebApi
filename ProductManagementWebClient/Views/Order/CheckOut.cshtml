
@{
    ViewData["Title"] = "CheckOut";
}
@section styles{
    <style>
        #checkout {
            background-color: #ee3e0f;
            color: white;
        }
        #fame_bill {
            background-color:lightpink;
            border-radius:30px;
        }
    </style>
}

<section class="pt-5 pb-5">
    <div class="container">
        <div class="row w-100" id="fame_bill">
            <div class="col-lg-12 col-md-12 col-12">
                <h3 class="display-5 mb-2 text-center">Your invoice has been successfully ordered</h3>
                @*<p class="mb-5 text-center">
            <i class="text-info font-weight-bold">Model.Count</i> items in your cart
        </p>*@
                <table id="cartTable" class="table table-condensed table-responsive">
                    <thead>
                        <tr>
                            <th style="width:60%">Product</th>
                            <th style="width:12%">Price</th>
                            <th style="width:14%">Quantity</th>
                            <th class="text-right" style="width:14%">Subtotal</th>
                            <th style="width:16%"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="float-right text-right">
                    <h4>Total Bill:</h4>
                    <h1 id="bill">0</h1>
                    <h4>Address:</h4>
                    <h1 id="cus-address">0</h1>
                </div>
                <div class="float-left text-left">
                    <h4>Payments:</h4>
                    <h1 id="bill2">COD(Cash on delivery)</h1>
                    <h4>Phone:</h4>
                    <h1 id="cus-phone">0</h1>
                </div>
            </div>
        </div>
        <div class="row mt-4 d-flex align-items-center">
            <div class="col-sm-6 order-md-2 text-right">
                @*href="/Orders/CheckOut/@ViewBag.OderId mặc định đã không cho + quá số hàng trong kho rùi*@
                <a href="/Order/GetAllHistoryOrderByCumtomerId" id="checkout" name="checkout" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">View Order Status</a>
            </div>
            <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                <a href="/Home/IndexMain">
                    <i class="fas fa-arrow-left mr-2"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }*@
    @*<script id="token" type="application/json">@Html.Raw(Json.Serialize(Context.Items["token"]))</script>*@
<script src="~/js/checkOut.js"></script>

}

